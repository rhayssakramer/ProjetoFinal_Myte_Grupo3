@model IEnumerable<ProjetoFinal_Myte_Grupo3.Models.Department>
@{
    ViewData["Title"] = "Departamentos";
    var departmentId = ViewBag.DepartmentId;
    var departmentName = ViewBag.DepartmentName;
}
<nav data-mdb-navbar-init class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol id="bread" class="breadcrumb">
                <li class="breadcrumb-item"><a class="text-secondary" asp-area="" asp-controller="WorkingHours" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a class="text-secondary" asp-area="" asp-controller="Departments" asp-action="Index">Departamentos</a></li>
            </ol>
        </nav>
    </div>
</nav>
<div class="card shadow bg-light rounded-3">
    <div class="card-header card_color">
        <h2 class="card-title text-center mb-0 mt-0 text-white">Departamentos</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-1 mt-1">
                <div class="text-left">
                    <a class="btn btn-primary" asp-action="Create">Criar</a>
                </div>
            </div>
            <div class="col-md-5 mb-2 form-outline" data-mdb-input-init style="margin-left: 32rem;">
                <input type="search" id="searchInput" class="form-control text-left" data-mdb-input-init placeholder="Pesquisar Departamento">
            </div>
        </div>
        <table class="table table-light">
            <thead class="table-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartmentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeCount)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartmentName)
                        </td>
                        <td>
                            @item.EmployeeCount
                        </td>
                        <td>
                            <a class="btn bi bi-pencil-square" title="Editar" asp-action="Edit" asp-route-id="@item.DepartmentId"></a>
                            <a class="btn bi bi-list" title="Detalhes" asp-action="Details" asp-route-id="@item.DepartmentId"></a>
                            <button type="button" class="btn bi bi-trash" data-bs-toggle="modal" data-bs-target="#modal-@item.DepartmentId" data-id="@item.DepartmentId"></button>
                        </td>
                    </tr>

                    <!-- Modal de confirmação -->
                    <div class="modal fade" id="modal-@item.DepartmentId" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalLabel-@item.DepartmentId" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="modalLabel-@item.DepartmentId">Confirmar Exclusão </h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Tem certeza de que deseja excluir  @item.DepartmentName?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                                    <button type="button" class="btn btn-primary confirmDelete" data-id="@item.DepartmentId">Confirmar</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" asp-route-id="@item.DepartmentId" method="get" id="deleteForm-@item.DepartmentId" class="d-none">
                        <input type="hidden" name="id" value="@item.DepartmentId" />
                    </form>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('input', function () {
            var input, filter, table, tr, td, i, departmentName;
            input = document.getElementById('searchInput');
            filter = input.value.toUpperCase();
            table = document.querySelector('table');
            tr = table.getElementsByTagName('tr');

            for (i = 0; i < tr.length; i++) {
                departmentName = tr[i].getElementsByTagName('td')[0];
                if (departmentName) {
                    if ((departmentName.textContent || departmentName.innerText).toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = '';
                    } else {
                        tr[i].style.display = 'none';
                    }
                }
            }
        });

        $(document).ready(function () {
            $('.confirmDelete').on('click', function () {
                const itemId = $(this).data('id');
                $('#deleteForm-' + itemId).submit();
            });
        });
    </script>
}
