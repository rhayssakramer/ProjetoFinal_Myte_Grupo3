@model ProjetoFinal_Myte_Grupo3.Models.Department
@{
    ViewData["Title"] = "Criar Departamentos";
}
<h1>Criar Departamentos</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label fw-bolder"></label>
                <input asp-for="DepartmentName" class="form-control text-left"/>
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" value="Create" class="btn btn-primary mt-2">Enviar</button>
                <a class="btn btn-secondary mt-2" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}