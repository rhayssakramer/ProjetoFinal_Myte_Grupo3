@model ProjetoFinal_Myte_Grupo3.Models.Department
@{
    ViewData["Title"] = "Departments";
}
<br />
<h1 class="mt-5">Departments</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="DepartmentName" class="form-control" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <button class="btn btn-danger" asp-action="Create">Enviar</button>
                <button class="btn btn-danger" asp-action="Index">Voltar</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
