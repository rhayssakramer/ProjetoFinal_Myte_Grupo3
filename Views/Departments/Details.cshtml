@model ProjetoFinal_Myte_Grupo3.Models.Department

@{
    ViewData["Title"] = "Detalhes do Departamento";
}
<br />
<nav data-mdb-navbar-init class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol id="bread" class="breadcrumb">
                <li class="breadcrumb-item"><a class="text-secondary" asp-area="" asp-controller="WorkingHours" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a class="text-secondary" asp-area="" asp-controller="Departments" asp-action="Index">Departamentos</a></li>
                <li class="breadcrumb-item"><a class="text-secondary" asp-area="" asp-controller="Departments" asp-action="Details">Detalhes</a></li>
            </ol>
        </nav>
    </div>
</nav>
<div class="card shadow bg-light rounded-3">
    <div class="card-header card_color">
        <h2 class="card-title text-center mb-0 mt-0 text-white">Detalhes do Departamento</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-9">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.DepartmentName):
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.DepartmentName)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.EmployeeCount):
                    </dt>
                    <dd class="col-sm-8">
                        @Model.EmployeeCount
                    </dd>
                </dl>
            </div>
        </div>
        <div>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.DepartmentId">Editar</a>
            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
        </div>
    </div>
</div>
