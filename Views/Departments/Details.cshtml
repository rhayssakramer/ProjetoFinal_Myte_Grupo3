@model ProjetoFinal_Myte_Grupo3.Models.Department
@{
    ViewData["Title"] = "Detalhes Departamento";
}
<h1>Detalhes Departamento</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Departamento:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
    </dl>
</div>
<div>
    <button class="btn btn-primary mt-2" asp-action="Edit" asp-route-id="@Model?.DepartmentId">Enviar</button>
    <a class="btn btn-secondary mt-2" asp-action="Index">Voltar</a>
</div>
