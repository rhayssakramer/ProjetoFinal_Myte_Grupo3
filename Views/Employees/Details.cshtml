@model ProjetoFinal_Myte_Grupo3.Models.Employee
@{
    ViewData["Title"] = "Detalhes Funcionário";
}
<h1>Detalhes Fucionário</h1>
<hr/>
<div>
    <dl class="row">
        <dt class="col-sm-2">
           Nome:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeName)
        </dd>
        <dt class="col-sm-2">
            E-mail:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Senha:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            Data de Contratação:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HiringDate)
        </dd>
        <dt class="col-sm-2">
            Nível de Acesso:
        </dt>
        <dd class="col-sm-10">
            @ViewData["AccessLevel"]
        </dd>
        <dt class="col-sm-2">
            Status:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusEmployee)
        </dd>
    </dl>
</div>
<div>
    <button class="btn btn-primary mt-2 text-white" asp-action="Edit" asp-route-id="@Model?.EmployeeId">Editar</button>
    <a class="btn btn-secondary mt-2" asp-action="Index">Voltar</a>
</div>
