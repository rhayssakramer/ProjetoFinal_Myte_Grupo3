@model ProjetoFinal_Myte_Grupo3.Models.Employee
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Editar Funcionário";
}
<br />
<nav data-mdb-navbar-init class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol id="bread" class="breadcrumb">
                <li class="breadcrumb-item"><a class="text-secondary" asp-area="" asp-controller="WorkingHours" asp-action="Index">Home</a></li>
                @if(User.IsInRole("Admin")){
                <li class="breadcrumb-item"><a class="text-secondary" asp-area="" asp-controller="Employees" asp-action="Index">Funcionários</a></li>
                }
                <li class="breadcrumb-item"><a class="text-secondary" asp-area="" asp-action="Details" asp-route-id="@Model.EmployeeId">Detalhes</a></li>
            </ol>
        </nav>
    </div>
</nav>
<div class="card text-center shadow bg-light rounded-3">
    <div class="card-header card_color">
        <h2 class="card-title text-white mt-0 mb-0">Editar Funcionários</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EmployeeId" />


                    @if (User.IsInRole("Admin"))
                    {

                        <div class="form-group text-left">
                            <label asp-for="EmployeeName" class="control-label"></label>

                            <input asp-for="EmployeeName" class="form-control text-left"  />
                            <span asp-validation-for="EmployeeName" class="text-danger"></span>
                        </div>
                        <div class="form-group text-left">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control text-left"  />

                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group text-left">
                            @* <label asp-for="IdentityUserId" class="control-label"></label> *@
                            <input asp-for="IdentityUserId" class="form-control text-left" value="@Model.IdentityUserId" type="hidden" />
                            <span asp-validation-for="IdentityUserId" class="text-danger"></span>
                        </div>

                        <div class="form-group text-left">
                            @* <label asp-for="HiringDate" class="control-label"></label> *@

                            <input asp-for="HiringDate" class="form-control text-left" value="@Model.HiringDate" type="hidden" />
                            <span asp-validation-for="HiringDate" class="text-danger"></span>
                        </div>
                        <div class="form-group text-left">
                            <label asp-for="DepartmentId" class="control-label"></label>

                            <select asp-for="DepartmentId" class="form-control text-left" asp-items="ViewBag.DepartmentId"></select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>
                    }

                    @* <div class="form-group">
                    <label asp-for="AcessLevel" class="control-label"></label>
                    <input asp-for="AcessLevel" class="form-control" />
                    <span asp-validation-for="AcessLevel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label asp-for="StatusEmployee" class="control-label"></label>
                    <input asp-for="StatusEmployee" class="form-control" />
                    <span asp-validation-for="StatusEmployee" class="text-danger"></span>
                    </div> *@

                    <div class="form-group text-left">
                        @* <label asp-for="EmployeeName" class="control-label"></label> *@

                        <input asp-for="EmployeeName" class="form-control text-left" value="@Model.EmployeeName" type="hidden"/>
                        <span asp-validation-for="EmployeeName" class="text-danger"></span>
                    </div>
                    <div class="form-group text-left">
                        @* <label asp-for="Email" class="control-label"></label> *@
                        <input asp-for="Email" class="form-control text-left" value="@Model.Email" type="hidden" />

                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group text-left">
                        @* <label asp-for="IdentityUserId" class="control-label"></label> *@
                        <input asp-for="IdentityUserId" class="form-control text-left" value="@Model.IdentityUserId" type="hidden" />
                        <span asp-validation-for="IdentityUserId" class="text-danger"></span>
                    </div>

                    <div class="form-group text-left">
                        @* <label asp-for="HiringDate" class="control-label"></label> *@

                        <input asp-for="HiringDate" class="form-control text-left" value="@Model.HiringDate" type="hidden" />
                        <span asp-validation-for="HiringDate" class="text-danger"></span>
                    </div>
                    <div class="form-group text-left">
                        @* <label asp-for="DepartmentId" class="control-label"></label> *@

                        @* <select asp-for="DepartmentId" class="form-control text-left" asp-items="ViewBag.DepartmentId" value="@Model.DepartmentId" type="hidden"></select> *@
                        <input asp-for="DepartmentId" class="form-control text-left" value="@Model.DepartmentId" type="hidden" />
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>

                    <div class="form-group text-left">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control text-left" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group text-left mt-3">
                        <button type="submit" class="btn btn-primary mt-2 text-white">Salvar</button>
                            @if(User.IsInRole("Admin"))
                            {
                            <a class="btn btn-secondary mt-2" asp-controller="Employees" asp-action="Index">Voltar</a>
                        }else
                        {
                        <a class="btn btn-secondary mt-2" asp-controller="WorkingHours" asp-action="Index">Voltar</a>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<br />
<br />
<br />
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}