@using Microsoft.AspNetCore.Identity
@model IEnumerable<ProjetoFinal_Myte_Grupo3.Models.Employee>


<h1>Todos os Funcionários</h1>


<p >
    <a asp-action="Register" asp-controller="Account" asp-area="" class="btn btn-primary">Criar Novo</a>
    <button class="btn btn-secondary" data-toggle="modal" data-target="#exportModal">Exportar</button>
</p>

<!-- Modal para exportação -->
<div class="modal fade" id="exportModal" tabindex="-1" role="dialog" aria-labelledby="exportModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-controller="Employees" asp-action="Export" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exportModalLabel">Exportar Relatório</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Campos a incluir:</label>
                        <div>
                            <input type="checkbox" name="fields" value="EmployeeName" checked /> Nome<br />
                            <input type="checkbox" name="fields" value="Email" checked /> Email<br />
                            <input type="checkbox" name="fields" value="HiringDate" /> Data de Contratação<br />
                            <input type="checkbox" name="fields" value="Department" /> Departamento<br />
                            <input type="checkbox" name="fields" value="AcessLevel" /> Nível de Acesso<br />
                            <input type="checkbox" name="fields" value="StatusEmployee" /> Status<br />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="sortOrder">Ordenar por:</label>
                        <select name="sortOrder" class="form-control">
                            <option value="EmployeeName">Nome</option>
                            <option value="Email">Email</option>
                            <option value="HiringDate">Data de Contratação</option>
                            <option value="Department">Departamento</option>
                            <option value="AcessLevel">Nível de Acesso</option>
                            <option value="StatusEmployee">Status</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="sortDirection">Direção:</label>
                        <select name="sortDirection" class="form-control">
                            <option value="asc">Crescente</option>
                            <option value="desc">Decrescente</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary">Exportar</button>
                </div>
            </form>
        </div>
    </div>
</div>


<form asp-controller="Employees" asp-action="Index" method="get">
    <div class="row mb-3">
        <div class="col-4">
            <div class="form-group">
                <label for="startDate">Data de Início</label>
                <input type="date" id="startDate" name="startDate" class="form-control" />
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label for="endDate">Data de Fim</label>
                <input type="date" id="endDate" name="endDate" class="form-control" />
            </div>
        </div>
        <div class="col-2">
            <div class="form-group">
                <label for="status">Status</label>
                <select id="status" name="status" class="form-control">
                    <option value="Active" selected>Ativo</option>
                    <option value="Inactive">Inativo</option>
                    <option value="Todos">Todos</option>
                </select>
            </div>
        </div>
        <div class="col-2 align-self-end">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.EmployeeName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Password)</th>
            <th>@Html.DisplayNameFor(model => model.HiringDate)</th>
            <th>@Html.DisplayNameFor(model => model.AcessLevel)</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.EmployeeName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                <td>@item.HiringDate.ToString("dd/MM/yyyy")</td>
                <td>@Html.DisplayFor(modelItem => item.AcessLevel)</td>
                <td>
                    <form asp-controller="Employees" asp-action="ToggleStatus" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.EmployeeId" />
                        <input type="checkbox" name="isActive" @(item.StatusEmployee == "Active" ? "checked" : "") onchange="this.form.submit()" />
                    </form>
                    <span class="@(item.StatusEmployee == "Active" ? "text-warning" : "text-secondary")">@((item.StatusEmployee == "Active" ? "Ativo" : "Inativo"))</span>
                </td>
                <td>
                    <a class="btn bi bi-pencil-square" asp-action="Edit" asp-route-id="@item.EmployeeId" class="btn btn-warning"></a>
                    <a class="btn bi bi-list" asp-action="Details" asp-route-id="@item.EmployeeId" class="btn btn-info"></a>
                    <a class="btn bi bi-trash" asp-action="Delete" asp-route-id="@item.EmployeeId" class="btn btn-danger"></a>
                </td>
            </tr>
        }
    </tbody>
</table>











 
  
