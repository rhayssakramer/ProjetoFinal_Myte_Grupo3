@model ProjetoFinal_Myte_Grupo3.Models.WBS

@{
    ViewData["Title"] = "Editar WBS";
}
<h1>Editar WBS</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WBSId" />
            <div class="form-group">
                <label asp-for="Code" class="control-label fw-bolder"></label>
                <input asp-for="Code" class="form-control text-left" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label fw-bolder"></label>
                <input asp-for="Description" class="form-control text-left" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label fw-bolder"></label>
                <input asp-for="Type" class="form-control text-left" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-primary text-white mt-2">Salvar</button>
                <a class="btn btn-secondary mt-2" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}