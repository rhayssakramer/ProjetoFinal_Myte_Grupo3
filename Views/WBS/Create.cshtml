@model ProjetoFinal_Myte_Grupo3.Models.WBS

@{
    ViewData["Title"] = "Criar WBS";
}
<h1>Criar WBS</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Code" class="control-label fw-bolder"></label>
                <input asp-for="Code" class="form-control text-left" placeholder="Digite um Código"/>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Description" class="control-label fw-bolder"></label>
                <input asp-for="Description" class="form-control text-left" placeholder="Digite uma Descrição"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label fw-bolder"></label>
                <select asp-for="Type" class="form-control text-left">
                    <option value="chargeability">Chargeability</option>
                    <option value="non-chargeability">Non-Chargeability</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="sumbit" class="btn btn-primary mt-2 text-white">Enviar</button>
                <a class="btn btn-secondary mt-2" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}