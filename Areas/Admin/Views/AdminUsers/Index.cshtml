@model IEnumerable<IdentityUser>
@{
    ViewData["Title"] = "Gerenciar Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card text-center shadow">
    <div class="card-header">
        <h3 class="card-title">Gerenciar Usuários</h3>
    </div>
    <div class="card-body">
        <div class="mb-2 text-left">
            <a asp-area="" asp-action="Register" asp-controller="Account" class="btn btn-primary">Registrar</a>
        </div>
        <input type="text" id="emailFilter" class="form-control" placeholder="Filtrar por e-mail" />

        @if (Model.Any())
        {
            <table class="table table-light">
                <thead class="table-secondary">
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr class="employee-row">
                            <td>@user.Id</td>
                            <td class="email">@user.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#emailFilter').on('input', function () {
                var filter = $(this).val().toLowerCase();
                $('.employee-row').each(function () {
                    var email = $(this).find('.email').text().toLowerCase();
                    if (email.indexOf(filter) > -1) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
    </script>
}