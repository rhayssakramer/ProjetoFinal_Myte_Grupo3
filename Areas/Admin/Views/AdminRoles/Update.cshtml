@model ProjetoFinal_Myte_Grupo3.Areas.Admin.Models.RoleEdit
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Atualizar Role";
}
<nav data-mdb-navbar-init class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol id="bread" class="breadcrumb">
                <li class="breadcrumb-item"><a class="text-secondary" asp-area="" asp-controller="WorkingHours" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a class="text-secondary" asp-area="areas" asp-controller="AdminRoles" asp-action="Index">Gerenciar Roles</a></li>
                <li class="breadcrumb-item"><a class="text-secondary" asp-area="areas" asp-controller="AdminRoles" asp-action="Create">Criar Roles</a></li>
            </ol>
        </nav>
    </div>
</nav>
<div class="card shadow bg-light">
    <div class="card-body">
        <h2 class="card-title text-center">Atualizar Role</h2>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="Update" method="post">
        <div class="mb-2">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
            <input type="hidden" name="roleName" value="@Model.Role.Name" />
            <input type="hidden" name="roleId" value="@Model.Role.Id" />
            <table class="table table-bordered table-sm table-light">
                <thead class="table-dark">
                    <tr>
                        <th>Incluir na Role: @Model.Role.Name</th>
                        <th></th>
                    </tr>
                </thead>
                @if (Model.NonMembers.Count() == 0)
                {
                }
                else
                {
                    @foreach (IdentityUser user in Model.NonMembers)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                <input type="checkbox" name="AddIds" value="@user.Id" />
                            </td>
                        </tr>
                    }
                }
            </table>
            <table class="table table-light">
                <thead class="table-dark">
                    <tr>
                        <th>Remover da Role: @Model.Role.Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbdoy>
                    @if (Model.Members.Count() == 0)
                    {
                        <tr><td colspan="2">Não existem usuários nesta Role.</td></tr>
                    }
                    else
                    {
                        @foreach (IdentityUser user in Model.Members)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td><input type="checkbox" name="DeleteIds" value="@user.Id"></td>
                            </tr>
                        }
                    }
                </tbdoy>
            </table>
        </form>
    </div>
</div>