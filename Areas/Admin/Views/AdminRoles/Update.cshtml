@model ProjetoFinal_Myte_Grupo3.Areas.Admin.Models.RoleEdit
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Atualizar Role";
}
<h1>Atualizar Role</h1>
<hr />
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Update" method="post">
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Incluir na Role: @Model.Role.Name</th>
                <th></th>
            </tr>
        </thead>
        @if (Model.NonMembers.Count() == 0)
        {
         
        }
        else
        {
            @foreach (IdentityUser user in Model.NonMembers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input  type="checkbox" name="AddIds" value="@user.Id" />
                    </td>
                </tr>
            }
        }
    </table>
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Remover da Role: @Model.Role.Name</th>
                <th></th>
            </tr>
        </thead>
        @if (Model.Members.Count() == 0)
        {
            <tr><td colspan="2">Não existem usuários nesta Role.</td></tr>
        }
        else
        {
            @foreach (IdentityUser user in Model.Members)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="DeleteIds" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>
        <div>
            <button type="submit" class="btn btn-primary">Salvar</button>
            <button asp-action="Index" class="btn btn-secondary">Voltar</button>
        </div>
</form>