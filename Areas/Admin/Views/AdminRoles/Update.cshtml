@model ProjetoFinal_Myte_Grupo3.Areas.Admin.Models.RoleEdit
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Atualizar Role";
}
<nav data-mdb-navbar-init class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol id="bread" class="breadcrumb">
                <li class="breadcrumb-item"><a class="text-secondary" asp-area="" asp-controller="WorkingHours" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a class="text-secondary" asp-area="areas" asp-controller="AdminRoles" asp-action="Index">Gerenciar Roles</a></li>
                <li class="breadcrumb-item"><a class="text-secondary" asp-area="areas" asp-controller="AdminRoles" asp-action="Create">Criar Roles</a></li>
            </ol>
        </nav>
    </div>
</nav>
<div class="card shadow bg-light rounded-3">
    <div class="card-header card_color">
        <h2 class="card-title text-center text-white mt-2">Atualizar Administradores</h2>
    </div>
    <div class="card-body">
       @*  <div asp-validation-summary="All" class="text-danger"></div> *@
        <form asp-action="Update" method="post">
        <div class="mb-2 mx-3">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
            <input type="hidden" name="roleName" value="@Model.Role.Name" />
            <input type="hidden" name="roleId" value="@Model.Role.Id" />
        <div class="row justify-content-center">
            <div class="col-md-6">
                    <table class="table table-light mx-3" style="width:500px;">
                        <thead class="table_color">
                            <tr>
                                <th>Incluir Administradores</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="table-borderless">
                            @if (Model.NonMembers.Count() == 0)
                            {
                            }
                            else
                            {
                                @foreach (IdentityUser user in Model.NonMembers)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>
                                            <input type="checkbox" name="AddIds" value="@user.Id" />
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
            </div>
            <div class="col-md-6">
                    <table class="table table-light" style="width:500px;">
                        <thead class="table_color">
                            <tr>
                                <th>Remover Administradores</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbdoy>
                            @if (Model.Members.Count() == 0)
                            {
                                <tr><td colspan="2">Não existem usuários nesta Role.</td></tr>
                            }
                            else
                            {
                                @foreach (IdentityUser user in Model.Members)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td><input type="checkbox" name="DeleteIds" value="@user.Id"></td>
                                    </tr>
                                }
                            }
                        </tbdoy>
                    </table>
            </div>
        </div>
        </form>
    </div>
</div>