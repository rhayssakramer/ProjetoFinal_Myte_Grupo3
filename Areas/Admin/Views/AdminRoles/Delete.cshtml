@model IdentityRole
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Deletar Role";
}
<h2>Tem certeza que deseja excluir esta Role?</h2>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nome:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.Id" />
        <button type="submit" value="Deletar" class="btn btn-primary">Excluir</button>
        <button class="btn btn-secondary" asp-action="Index">Voltar</button>
    </form>
</div>